<% include ../partials/header %>

<div class="container">
	
	<header class="jumbotron">
		<div class="container">
			

			<div class="container">

				<h1 style="text-align:center">Add New Comment to <%= campground.name %></h1>
						
					<form action="/campgrounds/<%= campground._id %>/comments" 						method="POST">
							<input style="width: 80%; margin: 1rem 													auto;" class="form-control" type="text" 										name="comment[text]" placeholder="Comment">
							
							<button style="width: 80%; margin: 5rem auto;" 											class="btn btn-lg btn-info 														mt-2 btn-block">Submit!</button>
					</form>
					<a style="mt-2" href="/campgrounds">Back to 						Campgrounds</a>
					<% include ../partials/footer %>
			</div>
	</div>
		