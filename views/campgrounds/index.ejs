<% include ../partials/header %>

	
<div class="container">
	
	<header>
	
		<div class="jumbotron" style="background: url(https://images.unsplash.com/photo-1481973964012-59a7f3225eb1?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80); no-repeat center center fixed; -webkit-background-size: cover; -moz-background-size: cover; -o-background-size: cover; background-size: cover;">


		<div class="container text-center">
			<h1 class="text-weight-bold text-light">Welcome to Kylo Camping!</h1>
			<h4 class="text-light">
				Campsites from all over the world!
			</h4>
			<p>
				<a class="btn btn-info btn btn-lg mt-2" href="/campgrounds/new">Add New Campground</a>
			</p>
		</div>
			</div>
	</header>

	<div class="row text-center" style="display:flex; flex-wrap: wrap;">
		<% campgrounds.forEach(function(campground){ %>
			<div class="col-md-3 mt-4 col-sm-6 mt-4">
				<div class="thumbnail">
					<img width=100% src="<%= campground.image %>">
					<div class="card">
						<h4><%= campground.name %></h4>
						<p>
						<a href="/campgrounds/<%= campground._id %>" class="btn btn-info">More Info</a>
					</p>
					</div>
					
				</div>
			</div>
		<% }); %>
		<div style="width: 80%; margin: 1rem auto;">
			<% include ../partials/footer %>
		</div>
	</div>	
</div>

